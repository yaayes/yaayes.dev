---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { getCollection } from 'astro:content';

// Get recent posts (last 5)
const allPosts = (await getCollection('posts'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

const recentPosts = allPosts.slice(0, 5);

// Fetch popular posts from Worker API (will be empty initially)
let popularPosts = [];
try {
  // This will be your Cloudflare Worker endpoint
  const response = await fetch('https://YOUR_WORKER_URL/popular-posts', {
    headers: { 'Accept': 'application/json' }
  });
  if (response.ok) {
    popularPosts = await response.json();
  }
} catch (error) {
  console.log('Popular posts not available yet');
}

const socialLinks = [
  { name: 'GitHub', url: 'https://github.com/yourusername', icon: 'github' },
  { name: 'Twitter', url: 'https://twitter.com/yourusername', icon: 'twitter' },
  { name: 'LinkedIn', url: 'https://linkedin.com/in/yourusername', icon: 'linkedin' },
];
---

<Layout title="Home - Yassine's Blog">
  <div data-pagefind-ignore>
  <Header />
  
  <main class="max-w-5xl mx-auto px-4 py-12">
    <!-- Hero Section with Funny Intro -->
    <section class="mb-20">
      <div class="flex flex-col md:flex-row items-center gap-12">
        <div class="flex-1">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">
            Hey there! üëã
          </h1>
          <p class="text-xl mb-6 leading-relaxed">
            I'm <span class="text-[rgb(var(--color-primary))] font-semibold">Yassine</span>, 
            a DevOps engineer who spends way too much time arguing with YAML files 
            and pretending to understand Kubernetes networking.
          </p>
          <p class="text-lg text-[rgb(var(--color-text))] opacity-80 mb-8 leading-relaxed">
            When I'm not debugging production at 3 AM (which is more often than I'd like), 
            I write about software development, DevOps practices, and occasionally share 
            war stories from the trenches of infrastructure management.
          </p>
          
          <!-- Social Links -->
          <div class="flex gap-4">
            {socialLinks.map(link => (
              <a 
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="p-3 rounded-lg border border-[rgb(var(--color-border))] hover:bg-[rgb(var(--color-primary))]/10 transition-colors text-[rgb(var(--color-text))]"
                aria-label={link.name}
              >
                {link.icon === 'github' && (
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
